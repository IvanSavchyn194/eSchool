pipeline{
    agent any
    environment {
    SECRET_IP = credentials('eschool_IP')
    SECRET_USERNAME = credentials('eschool_username')
    DATASOURCE_USER = credentials('DATASOURCE_USERNAME')
    DATASOURCE_PASS = credentials('DATASOURCE_PASSWORD')
    DATA_PASS = credentials('DATA_PASS')
    DATA_USER = credentials('DATA_USER')
    
    stages{
   
        stage('compile'){
            steps{
                    sh 'mvn clean compile'
            }
        }
        stage('test'){
            steps{
                    sh 'mvn test -Dtest=!academy.softserve.eschool.*.*IntegrationTest'
            }
        }
        stage("Build"){
            steps{
                    sh 'mvn package -Dmaven.test.skip=true'
            }
        }
        stage("Deploy"){
            steps{
                 sshagent(['eschool-prod']) { 
                    sh "ssh -i /etc/ssh/eschool_prod.pem ${SECRET_USERNAME}@${SECRET_IP} sudo systemctl stop eSchool.service"
                    sh "ssh -i /etc/ssh/eschool_prod.pem ${SECRET_USERNAME}@${SECRET_IP} export ${DATA_USER}=${DATASOURCE_USER}"
                    sh "ssh -i /etc/ssh/eschool_prod.pem ${SECRET_USERNAME}@${SECRET_IP} export ${DATA_PASS}=${DATASOURCE_PASS}"
                    sh 'ssh -i /etc/ssh/eschool_prod.pem ${SECRET_USERNAME}@${SECRET_IP} mv /home/azureuser/eSchool/eschool.jar /home/azureuser/eSchool/eSchool_bec/eschool_${BUILD_ID}_$(date +"%F_%T").jar'
                    sh "scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/eSchool-Pipeline/target/eschool.jar ${SECRET_USERNAME}@${SECRET_IP}:/home/azureuser/eSchool"
                    sh "ssh -i /etc/ssh/eschool_prod.pem ${SECRET_USERNAME}@${SECRET_IP} sudo systemctl start eSchool.service"
                 }
            }       
        }
    }
}
