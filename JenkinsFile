pipeline{
    agent any
    stages{
        stage('compile'){
            steps{
                    sh 'mvn clean compile'
            }
        }
        stage('test'){
            steps{
                    sh 'mvn test -Dtest=!academy.softserve.eschool.*.*IntegrationTest'
            }
        }
        stage("Build"){
            steps{
                    sh 'mvn package -Dmaven.test.skip=true'
            }
        }
        stage("Deploy"){
            steps{
                  sshagent(['eSchool_prod']) {
                       sh "ssh -o StrictHostKeyChecking=no azureuser@20.106.155.225 sudo systemctl stop eSchool_restart.service"
                       sh "ssh -o StrictHostKeyChecking=no azureuser@20.106.155.225 mv /home/azureuser/eSchool/eschool.jar /home/azureuser/eSchool/eSchool_bec/eschool$(date +"%FT%T").jar"
                       sh "scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/eSchool_pipe/target/eschool.jar azureuser@20.106.155.225 /home/azureuser/eSchool"
                       sh "ssh -o StrictHostKeyChecking=no azureuser@20.106.155.225 sudo systemctl start eSchool_restart.service"
                  }
            }
        }
    }
}
