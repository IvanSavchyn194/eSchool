pipeline{
    agent any
    stages{
        stage('compile'){
            steps{
                    sh 'mvn clean compile'
            }
        }
        stage('test'){
            steps{
                    sh 'mvn test -Dtest=!academy.softserve.eschool.*.*IntegrationTest'
            }
        }
        stage("Build"){
            steps{
                    sh 'mvn package -Dmaven.test.skip=true'
            }
        }
        stage("Deploy"){
            steps{
                 transfers:[
                           sshTransfer(
                           execCommand: "sudo systemctl stop eSchool.service"
                           ),
                           sshTransfer(
                           sourceFiles:"${target/*.jar}, ${/home/azureuser/eSchool}/${eschool.jar}",
                           removePrefix: "${target}",
                           remoteDirectory: "${/home/azureuser/eSchool}",
                           execCommand: "sudo systemctl start eSchool.service"
                           )
                           ])  
                    }
        }
    }
}
