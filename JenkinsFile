pipeline{
    agent any
    stages{
        stage('compile'){
            steps{
                    sh 'mvn clean compile'
            }
        }
        stage('test'){
            steps{
                    sh 'mvn test -Dtest=!academy.softserve.eschool.*.*IntegrationTest'
            }
        }
        stage("Build"){
            steps{
                    sh 'mvn package -Dmaven.test.skip=true'
            }
        }
        stage("Deploy"){
            steps{
                    sh 'ssh -i /etc/ssh/eschool.pem azureuser@52.255.206.220 sudo systemctl stop nginx'
                    }
        }
    }
}
