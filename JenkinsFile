pipeline{
    agent any
    environment {
    SECRET_IP = credentials('eSchool-prod-IP')
    SECRET_USERNAME = credentials('escool-username')
    DB_USERNAME = credentials('db-username')
    DB_PASSWORD = credentials('db-password')
    }
    stages{
   
        stage('compile'){
            steps{
                    sh 'mvn clean compile'
            }
        }
        stage('test'){
            steps{
                sh 'mvn test -Dtest=!academy.softserve.eschool.*.*IntegrationTest'
            }
        }
       
        stage("Build"){
            steps{
                sh """sed -i 's/{DATASOURCE_USERNAME:}/{DATASOURCE_USERNAME:${DB_USERNAME}}/' ./src/main/resources/application.properties"""
                sh """sed -i 's/{DATASOURCE_PASSWORD:}/{DATASOURCE_PASSWORD:${DB_PASSWORD}}/' ./src/main/resources/application.properties"""
                sh 'mvn package -Dmaven.test.skip=true'
            }
        }
        stage("Deploy"){
            steps{
                sshagent(['eschool-prod']) {
                    sh "ssh ${SECRET_USERNAME}@${SECRET_IP} sudo systemctl stop eSchool.service"
                    sh 'ssh ${SECRET_USERNAME}@${SECRET_IP} mv /home/azureuser/eSchool/eschool.jar /home/azureuser/eSchool/eSchool_bec/eschool_${BUILD_ID}_$(date +"%F_%T").jar'
                    sh "scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/eSchool/target/eschool.jar ${SECRET_USERNAME}@${SECRET_IP}:/home/azureuser/eSchool"
                    sh "ssh ${SECRET_USERNAME}@${SECRET_IP} sudo systemctl start eSchool.service"
                }
            }       
        }
    }
}
