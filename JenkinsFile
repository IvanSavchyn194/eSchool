pipeline{
    agent any
    stages{
   
        stage('compile'){
            steps{
                    sh 'mvn clean compile'
            }
        }
        stage('test'){
            steps{
                    sh 'mvn test -Dtest=!academy.softserve.eschool.*.*IntegrationTest'
            }
        }
        stage("Build"){
            steps{
                    sh 'mvn package -Dmaven.test.skip=true'
            }
        }
        stage("Deploy"){
            steps{
                 sshagent(['eschool-prod']) { 
                    sh "ssh -i /etc/ssh/eschool_prod.pem azureuser@20.123.162.147 sudo systemctl stop eSchool.service"
                    sh "ssh -i /etc/ssh/eschool_prod.pem azureuser@20.123.162.147 mv /home/azureuser/eSchool/eschool.jar /home/azureuser/eSchool/eSchool_bec/eschool_$(date +"%F_%T").jar"
                    sh "scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/eSchool-Pipeline/target/eschool.jar azureuser@20.123.162.147:/home/azureuser/eSchool"
                    sh "ssh -i /etc/ssh/eschool_prod.pem azureuser@20.123.162.147 sudo systemctl start eSchool.service"
                 }
            }       
        }
    }
}
