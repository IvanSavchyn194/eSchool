pipeline{
    agent any
    stages{
   
        stage('compile'){
            steps{
                    sh 'mvn clean compile'
            }
        }
        stage('test'){
            steps{
                    sh 'mvn test -Dtest=!academy.softserve.eschool.*.*IntegrationTest'
            }
        }
        stage("Build"){
            steps{
                    sh 'mvn package -Dmaven.test.skip=true'
            }
        }
        stage("Deploy"){
            steps{
                 
                 sh 'sudo ssh -i /etc/ssh/eschool_prod.pem -o StrictHostKeyChecking=no azureuser@20.123.162.147 mv /home/azureuser/eSchool/eschool.jar /home/azureuser/eSchool/eSchool_bec/eschool_${BUILD_ID}_$(date +"%F_%T").jar'
            }       
        }
    }
}
